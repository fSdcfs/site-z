<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= editing ? 'Edit Product' : 'Host Product' %></title>
  <link rel="stylesheet" href="/src/output.css"/>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">

  <!-- Navbar -->
  <%- include("../partials/navBar") %>

  <!-- Form Section -->
  <section class="max-w-2xl mx-auto mt-12 bg-white shadow-lg rounded-lg p-8">
    <h1 class="text-2xl font-bold text-indigo-700 mb-6">
      <%= editing ? 'Edit Product' : 'Host a Product' %>
    </h1>

    <form action="/host/<%= editing ? 'edit' : '' %>" method="POST" enctype="multipart/form-data" class="space-y-6">
      
      <!-- Hidden ID for edit -->
      <input type="hidden" name="_id" value="<%= editing && item ? item._id : '' %>" />

      <!-- Product Name -->
      <div>
        <label for="name" class="block text-sm font-medium text-gray-700">Product Name</label>
        <input type="text" id="name" name="name" required
          value="<%= editing && item ? item.name : '' %>"
          class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"/>
      </div>

      <!-- Price -->
      <div>
        <label for="price" class="block text-sm font-medium text-gray-700">Price (â‚¹)</label>
        <input type="number" id="price" name="price" required step="0.01"
          value="<%= editing && item ? item.price : '' %>"
          class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"/>
      </div>

      <!-- Category -->
      <div>
        <label for="category" class="block text-sm font-medium text-gray-700">Category</label>
        <select id="category" name="category" required
          class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
          <option value="">Select a category</option>
          <option value="flowers" <%= editing && item && item.category === 'flowers' ? 'selected' : '' %>>Flowers</option>
          <option value="decor" <%= editing && item && item.category === 'decor' ? 'selected' : '' %>>Decor</option>
          <option value="gifts" <%= editing && item && item.category === 'gifts' ? 'selected' : '' %>>Gifts</option>
          <option value="other" <%= editing && item && item.category === 'other' ? 'selected' : '' %>>Other</option>
        </select>
      </div>

      <!-- Image Upload -->
      <div>
        <label for="image" class="block text-sm font-medium text-gray-700">Product Image</label>
        <input type="file" id="image" name="image" accept="image/*"
          class="mt-1 block w-full text-gray-700"/>
        <% if (editing && item && item.image) { %>
          <p class="text-sm text-gray-500 mt-2">Current image:</p>
          <img src="/images/<%= item.image %>" alt="<%= item.name %>" class="w-32 h-32 object-cover rounded mt-2"/>
        <% } %>
      </div>

      <!-- Submit -->
      <div class="text-center">
        <button type="submit"
          class="bg-indigo-600 text-white px-6 py-2 rounded-lg shadow hover:bg-indigo-700 transition">
          <%= editing ? 'Update Product' : 'Upload Product' %>
        </button>
      </div>
    </form>
  </section>

</body>
</html>