<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../src/output.css">
  <title>Booking List</title>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

  <!-- Navbar -->
  <%- include("../partials/navBar") %>

  <!-- Header -->
  <header class="bg-indigo-700 text-white py-6 shadow">
    <div class="max-w-7xl mx-auto px-6 flex flex-col sm:flex-row sm:items-center sm:justify-between">
      <h1 class="text-2xl font-bold">Booking Summary</h1>
      <div class="mt-2 sm:mt-0">
        <p class="text-sm">
          User: <span class="font-semibold"><%= user.firstname %> <%= user.lastname %></span>
        </p>
        <p class="text-sm">
          Total Products: <span class="font-semibold"><%= Book.length %></span>
        </p>
        <p class="text-sm">
          Total Amount: <span class="font-semibold">₹<%= totalAmount %></span>
        </p>
      </div>
    </div>
  </header>

  <!-- Products Grid -->
  <main class="flex-1 max-w-7xl mx-auto px-6 py-10">
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% Book.forEach(item => { %>
        <div class="bg-white rounded-xl shadow hover:shadow-lg transition overflow-hidden">
          <!-- Product image (bigger height) -->
          <img src="/images/<%= item.image %>" alt="<%= item.name %>" 
               class="w-full h-64 object-cover"> <!-- increased from h-48 to h-64 -->

          <!-- Product details -->
          <div class="p-4">
            <h2 class="text-lg font-semibold text-gray-800"><%= item.name %></h2>
            <p class="text-gray-600 mt-1">Category: <%= item.category %></p>
            <p class="text-indigo-700 font-bold mt-2">₹<%= item.price %></p>

            <!-- Details button -->
            <a href="/details/<%= item._id %>" 
               class="mt-4 inline-block bg-indigo-600 text-white px-3 py-1 rounded hover:bg-indigo-700 transition text-center">
              View Details
            </a>

            <!-- Delete button -->
            <form action="/book/delete/<%= item._id %>" method="POST" class="mt-4">
              <button type="submit" 
                class="w-full bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition">
                Delete
              </button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-indigo-700 text-white text-center py-4 mt-10">
    <p>&copy; <%= new Date().getFullYear() %> MyApp Store</p>
  </footer>

</body>
</html>